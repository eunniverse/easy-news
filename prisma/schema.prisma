generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  idx Int @id @default(autoincrement())
  login_id String @unique
  created_at DateTime @default(now())
  password String
  name String
}

model News {
  idx Int @id @default(autoincrement())
  // fixme unique 걸어야함
  link String
  title String
  content String
  published_at DateTime
  created_at DateTime @default(now())

  details      News_detail[]
}

model News_detail {
  idx Int @id @default(autoincrement())
  news News @relation(fields: [news_idx], references: [idx])
  news_idx Int
  summary String
  words String
}
